.face
  .eyeBrow(id='left')
  .eyeBrow(id='right')
  .eyeContainer(rel='1', id='left')
    .eyeBall(id='eyeBall_1')
  .eyeContainer(rel='2', id='right')
    .eyeBall(id='eyeBall_2')
  #mouth
#container
  .slides.clearfix
    .slide
      #talkingBox
        #port
        #bowtie
          img(src='/img/bowtie.jpg')
        a(href="#", id="options") Options
    .slide
      #prompt
        .options
          ul
            li
              a(href="#", data-state='displayLocationInput') Find a person or room
            li
              a(href="#", data-state='displayImperialNews') Show me Imperial news and events
        #display
          .locationSubmit
            h3 Find a person or a room
            form#submitLocation
              input(type="text", id="personfinder", placeholder="Type in a name or room number")
          .imperialNews
      #hand
        img(src='/img/hand-left.png')

#popup
  .speechRecog
    h3 I heard: 
      span#content
    h3 Was that correct?
    input(type="button", id="recogConfirm", value="Yes")
    input(type="button", id="recogDenied", value="No")
  .floorConfirm
    h3 Are we on level
      span#floor
      yet?
    input(type="button", id="floorConfirm", value="Yes")
